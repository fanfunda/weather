.weather-wrapper{
  padding-top: 20rpx;
  padding-bottom: 250rpx;
  position: relative;
}

/* 位置信息 */
.location-wrapper{
  margin-bottom: 60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)
}

.location{
  display: flex;
  justify-content: center;
  align-items: center;
}

.location-icon{
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx;
}

.location-tips{
  margin-top:10rpx;
  text-align: center;
}

.temp {
  margin-top: 300rpd;
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}
.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}
.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* 今日信息 */
.day-weather {
  display: flex;
  align-items: center;
  position: absolute;
  bottom:0;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)
}

.temp-text {
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: right;
}

.arrow-icon {
  width: 13rpx;
  height: 24rpx;
}

/*天气预测标题*/ 
.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40rpx 0;
}
.timetips-icon {
  margin-right: 10rpx;
  width: 36rpx;
  height: 28rpx;
}
.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}
/* 预测列表容器 */
.forecast-list {
    display:flex;
}
.forecast-item {
    display:flex;
    flex-direction: column;
    flex-shrink: 0;
    align-items:center;
    width: 20%;
}
/* 预测详细内容 */
.forecast-time {
  font-size: 30rpx;
  line-height: 1.4;
}
.forecast-weather {
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}
.forecast-temp {
  margin-top: 46rpx;
  font-size: 40rpx;
  line-height: 1.4;
}